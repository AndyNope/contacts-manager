# Einfache .htaccess f√ºr Tests
RewriteEngine On

# Direkte Zugriffe auf Upload-Ordner erlauben
RewriteCond %{REQUEST_URI} ^/uploads/
RewriteRule ^(.*)$ - [L]

# API-Zugriffe erlauben  
RewriteCond %{REQUEST_URI} ^/api/
RewriteRule ^(.*)$ - [L]

# index ohne .php
RewriteRule ^index/?$ index.php [L]

# admin ohne .php
RewriteRule ^admin/?$ admin.php [L]

# admin_login ohne .php
RewriteRule ^admin_login/?$ admin_login.php [L]

# Profil-URLs
RewriteCond %{REQUEST_URI} ^/([A-Za-z]+-[A-Za-z]+)/?$
RewriteRule ^([A-Za-z]+-[A-Za-z]+)/?$ profile.php?name=$1 [L,QSA]

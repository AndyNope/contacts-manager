# Kompatible .htaccess für Live-Server
RewriteEngine On

# Direkte Zugriffe auf Upload-Ordner erlauben
RewriteCond %{REQUEST_URI} ^/uploads/
RewriteRule ^(.*)$ - [L]

# API-Zugriffe erlauben  
RewriteCond %{REQUEST_URI} ^/api/
RewriteRule ^(.*)$ - [L]

# Bekannte System-Dateien
RewriteRule ^index/?$ index.php [L]
RewriteRule ^admin/?$ admin.php [L]
RewriteRule ^admin_login/?$ admin_login.php [L]
RewriteRule ^debug/?$ debug.php [L]
RewriteRule ^debug_url/?$ debug_url.php [L]
RewriteRule ^debug_profiles/?$ debug_profiles.php [L]

# Profil-URLs - einfachere Version
# Matcht alles was nicht eine bekannte Datei ist und einen Bindestrich enthält
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} ^/([^/]*-[^/]*)/?$
RewriteRule ^([^/]*-[^/]*)/?$ profile.php?name=$1 [L,QSA]
